<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.GBSnowDay.SnowDay.About"
    android:id="@+id/about">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgAbout"
        android:layout_gravity="center"
        android:src="@drawable/icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/GBCS"
        android:id="@+id/txtGB"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title"
        android:id="@+id/txtSnowDay"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center"
        android:textSize="48sp"
        android:layout_below="@+id/txtGB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/dev_name"
        android:id="@+id/txtDev"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_below="@+id/imgAbout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/dev_site"
        android:id="@+id/txtWeb"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_below="@+id/txtDev"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

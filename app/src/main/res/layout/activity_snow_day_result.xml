<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.GBSnowDay.SnowDay.SnowDayResult"
    android:clickable="false"
    android:visibility="visible">

    <!--TODO: Create a landscape layout for this activity-->

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progCalculate"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true" />

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:id="@+id/tab1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/txtPercent"
                        android:visibility="visible"
                        android:textColor="#ffff0000"
                        android:textSize="72sp"
                        android:layout_gravity="center"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="75dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dayinfo"
                        android:id="@+id/txtInfo"
                        android:layout_below="@+id/txtPercent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingTop="32dp"
                        android:visibility="invisible"/>

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/lstGB"
                        android:textAlignment="center"
                        android:layout_below="@+id/txtInfo"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:choiceMode="none" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tab2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <ImageView
                        android:id="@+id/wjrtFail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/error"
                        android:baselineAlignBottom="true"
                        android:src="@android:drawable/stat_sys_warning"
                        android:gravity="center"
                        android:visibility="gone"/>

                            <ListView
                                android:id="@+id/lstClosings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                            <ListView
                                android:id="@+id/lstWJRT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/txtTier1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/txtTier2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/txtTier3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/txtTier4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tab3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <ImageView
                        android:id="@+id/nwsFail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/error"
                        android:layout_gravity="center"
                        android:src="@android:drawable/stat_sys_warning"
                        android:gravity="center"
                        android:visibility="gone"/>

                    <WebView
                        android:layout_width="800dp"
                        android:layout_height="765dp"
                        android:id="@+id/webRadar"
                        android:visibility="gone" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="@string/radarshow"
                        android:id="@+id/btnRadar"
                        android:onClick="radarToggle"
                        android:textColor="@android:color/white"
                        android:visibility="gone" />

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/lstWeather"
                        android:visibility="gone"/>

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/lstNWS"
                        android:visibility="gone"/>
                </RelativeLayout>


            </FrameLayout>

        </LinearLayout>
    </TabHost>
</RelativeLayout>

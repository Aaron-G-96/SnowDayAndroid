<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.GBSnowDay.SnowDay.SnowDayResult"
android:clickable="false"
android:visibility="visible">
    <fragment android:name="com.GBSnowDay.SnowDay.ResultPercent"
        android:id="@+id/ResultPercent"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout="@layout/result_percent" />
    <fragment android:name="com.GBSnowDay.SnowDay.ResultClosings"
        android:id="@+id/ResultClosings"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout="@layout/result_closings" />
    <fragment android:name="com.GBSnowDay.SnowDay.ResultWeather"
        android:id="@+id/ResultWeather"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout="@layout/result_weather" />
</LinearLayout>







